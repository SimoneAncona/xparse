{
    "$schema": "http://json-schema.org/draft-04/schema",
    "$id": "https://raw.githubusercontent.com/SimoneAncona/xparser/main/schemas/schema.json",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "minLength": 2,
            "description": "The name of the grammar"
        },
        "atomic": {
            "description": "List of all atomic values",
            "type": "array",
            "items": {
                "description": "An atomic value",
                "type": "object",
                "properties": {
                    "name": {
                        "description": "Name of the atomic rule",
                        "type": "string",
                        "minLength": 2
                    },
                    "regex": {
                        "description": "The ECMAScript regex of the atomic rule",
                        "type": "string",
                        "minLength": 2
                    }
                }
            }
        },
        "rules": {
            "description": "List of all rules",
            "type": "array",
            "items": {
                "description": "A rule",
                "type": "object",
                "properties": {
                    "name": {
                        "description": "Name of the rule",
                        "type": "string",
                        "minLength": 2
                    },
                    "expressions": {
                        "type": "array",
                        "description": "List of all rule expressions",
                        "minLength": 1,
                        "items": {
                            "type": "string",
                            "minLength": 2
                        }
                    }
                }
            }
        }
    },
    "required": [
        "atomic",
        "name",
        "rules"
    ]
}